<div>
    <% if @product.any? %>
    <ul>
        <% @product.each do |product| %>
            <li>
                <div>
                    <%= link_to product_path(product) do %>
                        <%= image_tag "/images/#{product.image1}" if product.image1.present? %>
                    <% end %>
                    <%= link_to product_path(product) do %>
                        <%= image_tag "/images/#{product.image2}" if product.image2.present? %>
                    <% end %>
                    <%= link_to product_path(product) do %>
                        <%= image_tag "/images/#{product.image3}" if product.image3.present? %>
                    <% end %>
                    <br>
                    <%= product.name %>
                    <br>
                    <p>￥<%= product.price %></p>
                </div>
            </li>
        <% end %>
    </ul>
    <% else %>
        <p>投稿がありません。</p>
    <% end %>
</div>